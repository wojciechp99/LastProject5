<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.LastProject5.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.LastProject5.AppWidgetContainer">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="372dp"
        android:layout_height="216dp"
        android:src="@drawable/example_appwidget_preview"
        android:contentDescription="@string/image" />

    <Button
        android:id="@+id/swapImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="238dp"
        android:text="@string/swap_image" />
</RelativeLayout>